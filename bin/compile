#!/usr/bin/env bash
# bin/compile <build-dir> <cache-dir> <env-dir>

indent() {
  sed -u 's/^/       /'
}

output_dir=$1/.profile.d
output_path=$output_dir/version.sh

echo "-----> Creating profile.d script"
echo "-----> Using source version $SOURCE_VERSION"

mkdir -p $output_dir
cat << EOF > $output_path
# default VERSION to build source version
export VERSION=\${VERSION:-$SOURCE_VERSION}
EOF

echo "-----> Installed to $output_path"
